                    onAction="#onButtonClicked"/>
            <Button fx:id="b4" text="4" GridPane.rowIndex="0"  GridPane.columnIndex="3" prefWidth="80" prefHeight="80"
                    onAction="#onButtonClicked"/>

            <Button fx:id="b5" text="5" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="80" prefHeight="80"
                    onAction="#onButtonClicked"/>
            <Button fx:id="b6" text="6" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="80" prefHeight="80"
                    onAction="#onButtonClicked"/>
            <Button fx:id="b7" text="7" GridPane.rowIndex="1"  GridPane.columnIndex="2" prefWidth="80" prefHeight="80"
                    onAction="#onButtonClicked"/>
            <Button fx:id="b8" text="8" GridPane.rowIndex="1"  GridPane.columnIndex="3" prefWidth="80" prefHeight="80"
                    onAction="#onButtonClicked"/>

            <Button fx:id="b9" text="9" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="80" prefHeight="80"
                    onAction="#onButtonClicked"/>
            <Button fx:id="b10" text="10" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="80" prefHeight="80"
                    onAction="#onButtonClicked"/>
            <Button fx:id="b11" text="11" GridPane.rowIndex="2"  GridPane.columnIndex="2" prefWidth="80" prefHeight="80"
                    onAction="#onButtonClicked"/>
            <Button fx:id="b12" text="12" GridPane.rowIndex="2"  GridPane.columnIndex="3" prefWidth="80" prefHeight="80"
                    onAction="#onButtonClicked"/>

            <Button fx:id="b13" text="13" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="80" prefHeight="80"
