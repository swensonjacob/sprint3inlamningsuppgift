            <Button fx:id="b14" text="14" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="80" prefHeight="80"
                    onAction="#onButtonClicked"/>
            <Button fx:id="b15" text="15" GridPane.rowIndex="3"  GridPane.columnIndex="2" prefWidth="80" prefHeight="80"
                    onAction="#onButtonClicked"/>
            <Button fx:id="nullButton" GridPane.rowIndex="3"  GridPane.columnIndex="3" prefWidth="80" prefHeight="50" visible="false"
                    onAction="#onButtonClicked"/>

        </GridPane>
    </center>
</BorderPane>